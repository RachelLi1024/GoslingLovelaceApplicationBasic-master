<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.goslinglovelaceapplicationbasic.MainActivity">


    <ImageView
        android:id="@+id/imageView_Jams"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:background="@drawable/james" />

    <TextView
        android:id="@+id/textView_Jams"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        android:text="Gosling" />

    <ScrollView
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_below="@+id/textView_Jams"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@id/imageView_Jams">

        <TextView
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/james" />


    </ScrollView>
</RelativeLayout>