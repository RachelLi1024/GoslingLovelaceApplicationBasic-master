<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.goslinglovelaceapplicationbasic.MainActivity">


    <ImageView
        android:id="@+id/imageView_Ada"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ada" />

    <TextView
        android:id="@+id/textView_Ada"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_centerHorizontal="true"
        android:text="AdaLovelace" />

    <ScrollView
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_below="@+id/textView_Ada"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_toRightOf="@id/imageView_Ada">

        <TextView
            android:id="@+id/text2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
           android:text="@string/ada" />

    </ScrollView>
</RelativeLayout>